<div class="pro-age-section">
  <div class="pro-age-container {% if section.settings.reverse_layout %}reverse{% endif %}">
    
    <div class="pro-age-image-container">
      {% if section.settings.desktop_image != blank %}
        <img 
          src="{{ section.settings.desktop_image | img_url: 'master' }}" 
          alt="{{ section.settings.heading }}"
          class="pro-age-desktop-image"
          loading="lazy"
        >
      {% else %}
        <div class="pro-age-image-placeholder">
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        </div>
      {% endif %}
    </div>
    
  
    <div class="pro-age-content">
      <h2 class="pro-age-heading">{{ section.settings.heading }}</h2>
      <p class="pro-age-subtitle">{{ section.settings.subtitle }}</p>
      
      <div class="pro-age-features">
        <div class="pro-age-feature">
          {% if section.settings.icon_1 != blank %}
            <img 
              src="{{ section.settings.icon_1 | img_url: '100x' }}" 
              alt="{{ section.settings.icon_1_text }}"
              class="pro-age-icon"
              loading="lazy"
              width="60"
              height="60"
            >
          {% endif %}
          <p class="pro-age-feature-text">{{ section.settings.icon_1_text }}</p>
        </div>
        
        <div class="pro-age-feature">
          {% if section.settings.icon_2 != blank %}
            <img 
              src="{{ section.settings.icon_2 | img_url: '100x' }}" 
              alt="{{ section.settings.icon_2_text }}"
              class="pro-age-icon"
              loading="lazy"
              width="60"
              height="60"
            >
          {% endif %}
          <p class="pro-age-feature-text">{{ section.settings.icon_2_text }}</p>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .pro-age-section {
    margin: 0 auto;
    width: 100%;
  }
  
  .pro-age-container {
    display: flex;
    flex-direction: column;
    width: 100%;
  }
  
 
  .pro-age-heading {
    font-size: {{ section.settings.heading_font_size_mobile }}px;
    line-height: {{ section.settings.heading_line_height_mobile }};
    color: {{ section.settings.heading_color }};
    margin-bottom: 15px;
    font-weight: bold;
  }
  
  .pro-age-subtitle {
    font-size: {{ section.settings.subtitle_font_size_mobile }}px;
    line-height: {{ section.settings.subtitle_line_height_mobile }};
    color: {{ section.settings.subtitle_color }};
    margin-bottom: 30px;
  }
  
  .pro-age-features {
    display: flex;
    flex-direction: row;
    justify-content: center;
    gap: 40px;
    margin-top: 20px;
  }
  
  .pro-age-feature {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    max-width: 150px;
  }
  
  .pro-age-icon {
    width: 60px;
    height: 60px;
    object-fit: contain;
    margin-bottom: 10px;
  }
  
  .pro-age-feature-text {
    font-size: {{ section.settings.feature_text_font_size_mobile }}px;
    line-height: {{ section.settings.feature_text_line_height_mobile }};
    color: {{ section.settings.feature_text_color }};
  }
  

  .pro-age-image-container {
    display: none; 
    padding: 0; 
  }
  
  .pro-age-image-placeholder {
    width: 100%;
    height: 400px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  
  .pro-age-desktop-image {
    width: 100%;
    height: auto;
    object-fit: contain;
    display: block;
  }
  
  
  @media screen and (max-width: 767px) {
    .pro-age-section {
      padding: 30px 20px; 
    }
    
    .pro-age-content {
      text-align: center;
      padding: 0;
      width: 100%;
    }
    
    .pro-age-features {
      justify-content: center;
    }
  }
  
  
  @media screen and (min-width: 768px) {
    .pro-age-container {
      flex-direction: row;
      align-items: center;
      gap: 0;
      height: 500px;
    }
    
    .pro-age-container.reverse {
      flex-direction: row-reverse;
    }
    
    .pro-age-image-container {
      display: block;
      width: 50%;
      flex: 0 0 50%;
      padding: 0;
    }
    
    .pro-age-content {
      width: 50%;
      flex: 0 0 50%;
      padding: 0 40px; 
    }
    
 
    .pro-age-heading {
      font-size: {{ section.settings.heading_font_size_desktop }}px;
      line-height: {{ section.settings.heading_line_height_desktop }};
      text-align: center;
    }
    
    .pro-age-subtitle {
      font-size: {{ section.settings.subtitle_font_size_desktop }}px;
      line-height: {{ section.settings.subtitle_line_height_desktop }};
      text-align: center;
    }
    
    .pro-age-feature-text {
      font-size: {{ section.settings.feature_text_font_size_desktop }}px;
      line-height: {{ section.settings.feature_text_line_height_desktop }};
    }
  }

    
    
@media screen and (min-width: 1600px) {
  
         .pro-age-content {
      padding: 0 200px; 
    }
     
  
    }


  
</style>

